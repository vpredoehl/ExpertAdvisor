do $code$
declare
	f text;
	qs text;
begin
	FOR f in select tablename from pg_tables  where tablename like '%rmp%'  order by tablename
	LOOP
		qs = format('create index if not exists %I_time_idx on %I ( time, ask ) include ( vol ) tablespace forex_indices', substring(f,1,6), f);
		raise info 'executing: %', qs;
		begin
			execute  qs;
		exception when others then 
			raise notice '% %', SQLERRM, SQLSTATE;
		end;
		COMMIT;
	END LOOP;
end $code$
language 'plpgsql';
