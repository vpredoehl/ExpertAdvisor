\i importrmp.plpgsql

do $code$
declare
	f  text;
	fu text;
	qs1 text;
	qs2 text;
	cmd text;
begin
	for f in select tablename from pg_tables where tablename like '%rmp' and tablename like 'g%' order by tablename
	LOOP
		select concat(concat('*', upper(substring(f,1,6))), '*') into fu;
		cmd =  format('find /Volumes/Lacie\ Porsche/2022 -name %I.csv -exec cat {} \;',fu);
		qs1 = format('drop trigger t_info on csvtemp; create trigger t_info before insert on csvtemp for each row execute procedure t_load("%I")', f);
		qs2 = format('copy csvtemp from program %L', cmd);
		begin
			raise info 'executing: %', qs1;
			execute qs1;
			raise info 'executing: %', qs2;
			execute qs2;
		exception when others then
			raise notice '% %', SQLERRM, SQLSTATE;
		end;
	END LOOP;
end $code$
language 'plpgsql';

